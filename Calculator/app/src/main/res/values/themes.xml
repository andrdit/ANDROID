<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor" tools:targetApi="l">@color/black</item>

    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
    </style>
    <!-- стиль для текста -->
    <style name="ActionBarTextStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="CalculatorCommonTheme" parent="Theme.Calculator">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>

    </style>

    <style name="ButtonsStyleForClear">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForClearLandScape">
        <item name="android:textSize">@dimen/keyTextSizeLandscape</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForSymbols">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForSymbolsLandScape">
        <item name="android:textSize">@dimen/keyTextSizeLandscape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForNumbers">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForNumbersLandScape">
        <item name="android:textSize">@dimen/keyTextSizeLandscape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
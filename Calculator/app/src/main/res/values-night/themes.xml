<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/nightBackgroundSymbols</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor" tools:targetApi="l">@color/nightTextColorWithTextNumbers</item>
    </style>

    <style name="CalculatorCommonTheme">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="ButtonsStyleForClear">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/nightBackgroundSymbols</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForClearLandScape">
        <item name="android:textSize">@dimen/keyTextSizeLandscape</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/nightBackgroundSymbols</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForSymbols">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/nightBackgroundSymbols</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForSymbolsLandScape">
        <item name="android:textSize">@dimen/keyTextSizeLandscape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/nightBackgroundSymbols</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForNumbers">
        <item name="android:textSize">@dimen/keyTextSize</item>
        <item name="android:textColor">@color/nightTextColorWithTextNumbers</item>
        <item name="android:backgroundTint">@color/nightBackgroundNumbers</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonsStyleForNumbersLandScape">
        <item name="android:textSize">@dimen/keyTextSizeLandscape</item>
        <item name="android:textColor">@color/nightTextColorWithTextNumbers</item>
        <item name="android:backgroundTint">@color/nightBackgroundNumbers</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>